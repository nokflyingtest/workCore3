@{
    Layout = "";
}
@model IEnumerable<PPcore.ViewModels.mem_product.mem_productViewModel>

<div class="panel panel-blue">
    <div class="panel-heading">
        <div class="pull-left" style="padding-top:5px;">แสดงข้อมูลทั้งหมด</div>
        <div class="pull-right" style="margin-top:-2px;">
            <div id="btnCreate" class="btn btn-default btn-panel-yellow" onclick="mem_productDisplay('@ViewBag.memberId');">&nbsp;<i class="fa fa-file" aria-hidden="true" style="color:white;"></i>&nbsp;&nbsp;&nbsp;เพิ่ม&nbsp;&nbsp;&nbsp;&nbsp;</div>
            <div id="btnEdit" class="btn btn-default btn-panel-yellow">&nbsp;<i class="fa fa-pencil-square-o" aria-hidden="true" style="color:white;"></i>&nbsp;แก้ไข&nbsp;&nbsp;</div>
            <div id="btnDetails" class="btn btn-default btn-panel-yellow">&nbsp;<i class="fa fa-file-text" aria-hidden="true" style="color:white;"></i>&nbsp;&nbsp;ดูข้อมูล</div>
        </div>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="dataTable_wrapper" style="padding-right:10px;">
            <table class="table table-striped table-bordered table-hover dataTablesMod" id="dataTablesSimple">
                <thead>
                    <tr>
                        <th class="text-center" style="width:50px;">@Html.DisplayNameFor(model => model.mem_product.rec_no)</th>
                        <th style="display:none">@Html.DisplayNameFor(model => model.mem_product.id)</th>
                        <th style="width:200px;">@Html.DisplayNameFor(model => model.product_group_desc)</th>
                        <th style="width:200px;">@Html.DisplayNameFor(model => model.product_type_desc)</th>
                        <th>@Html.DisplayNameFor(model => model.product.product_desc)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.mem_product.rec_no)</td>
                            <td style="display:none">@Html.DisplayFor(modelItem => item.mem_product.id)</td>
                            <td>@Html.DisplayFor(modelItem => item.product_group_desc)</td>
                            <td>@Html.DisplayFor(modelItem => item.product_type_desc)</td>
                            <td>@Html.DisplayFor(modelItem => item.product.product_desc)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>











    </div>
</div>

<!-- Modal -->
<div id="mem_productModal" class="modal fade modalForm2" tabindex="-1" role="dialog" aria-labelledby="mem_productModalLabel" aria-hidden="true">
    <div class="modal-lg">
        <div class="modal-content">
            <div class="modal-body container-fluid"> 
                <div id="mem_productModalRenderBody"></div>
                <div class="pull-right" style="margin-top:-2px;">
                    <div class="btn btn-default btn-panel-yellow" data-dismiss="modal" aria-hidden="true" >&nbsp;&nbsp;&nbsp;ปิด&nbsp;&nbsp;&nbsp;</div> <!--<i class="fa fa-times" aria-hidden="true" style="color:white;"></i> -->
                </div>
            </div>

        </div>
    </div>
</div>
<!-- /Modal -->

<!-- Modal -->
<div id="mem_productCreateModal" class="modal fade modalForm1" tabindex="-1" role="dialog" aria-labelledby="mem_productModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">




            <div id="mem_socialModalHeader" class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="vertical-align:middle;top:15px">&times;</button>
                <h4 id="mem_productModalLabel" class="modal-title" style="vertical-align:middle;"></h4>
            </div>
            <div class="modal-body container-fluid">
                <div id="mem_productModalRenderBody">

                    <form class="form-horizontal">
                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.product.product_desc)
                            <label asp-for="rec_no" class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input asp-for="rec_no" class="form-control" />
                                <span asp-validation-for="rec_no" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="degree" class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input asp-for="degree" class="form-control" />
                                <span asp-validation-for="degree" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="colledge_name" class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input asp-for="colledge_name" class="form-control" />
                                <span asp-validation-for="colledge_name" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="faculty" class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input asp-for="faculty" class="form-control" />
                                <span asp-validation-for="faculty" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <button id="mem_educationSubmit" class="btn btn-success" onclick="mem_productCreateSelect('@ViewBag.memberId')">บันทึก</button>
                            </div>
                        </div>
                    </form>







                </div>
            </div>





        </div>
    </div>
</div>
<!-- /Modal -->

