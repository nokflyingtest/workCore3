@{
    Layout = "";
}
@model IEnumerable<PPcore.ViewModels.mem_product.mem_productViewModel>

<div class="panel panel-blue">
    <div class="panel-heading">
        <div class="pull-left" style="margin-top:-2px;">
            <form class="form-inline" role="form">
                <div id="btnCreate" class="btn btn-default btn-panel-yellow" onclick="mem_productAddProduct('@ViewBag.memberId')">&nbsp;<i class="fa fa-file" aria-hidden="true" style="color:white;"></i>&nbsp;&nbsp;&nbsp;เพิ่ม&nbsp;&nbsp;&nbsp;&nbsp;</div>
                <select id="product_group" class="form-control" asp-items="@ViewBag.product_group" style="width:150px;"></select>
                <select id="product_type" class="form-control" style="width:150px;"></select>
            </form>
        </div>
        <div class="pull-right" style="margin-top:-2px;">
            <div class="form-group input-group" style="width:200px;">
                <input type="text" class="form-control" placeholder="คำค้นหา">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button" onclick="mem_productSearch();">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </div>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="dataTable_wrapper" style="padding-right:10px;">
            <table class="table table-striped table-bordered table-hover dataTablesMod" id="dataTablesListProduct">
                <thead>
                    <tr>
                        <th class="text-center">@Html.DisplayNameFor(model => model.mem_product.rec_no)</th>
                        <th style="display:none">@Html.DisplayNameFor(model => model.mem_product.id)</th>
                        @*<th>@Html.DisplayNameFor(model => model.product_group_desc)</th>
                        <th>@Html.DisplayNameFor(model => model.product_type_desc)</th>*@
                        <th>@Html.DisplayNameFor(model => model.product.product_desc)</th>
                        <th>เลือก</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center" >@Html.DisplayFor(modelItem => item.mem_product.rec_no)</td>
                            <td style="display:none">@Html.DisplayFor(modelItem => item.mem_product.id)</td>
                            @*<td>@Html.DisplayFor(modelItem => item.product_group_desc)</td>
                            <td>@Html.DisplayFor(modelItem => item.product_type_desc)</td>*@
                            <td>@Html.DisplayFor(modelItem => item.product.product_desc)</td>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>











    </div>
</div>
