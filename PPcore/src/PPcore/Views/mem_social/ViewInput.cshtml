@model PPcore.Models.mem_social

<form class="form-horizontal">
<div class="form-group">
    <label asp-for="rec_no" class="col-md-3 control-label"></label>
    <div class="col-md-9">
        <input asp-for="rec_no" class="form-control" />
        <span asp-validation-for="rec_no" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="social_desc" class="col-md-3 control-label"></label>
    <div class="col-md-9">
        <textarea asp-for="social_desc" class="form-control" rows="3"></textarea>
        <span asp-validation-for="social_desc" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-3 col-md-9">
        <button id="mem_socialSubmit" class="btn btn-success">บันทึก</button>
    </div>
</div>
</form>




@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
