@model PPcore.Models.mem_worklist

<form class="form-horizontal">
<div class="form-group">
    <label asp-for="rec_no" class="col-md-3 control-label"></label>
    <div class="col-md-9">
        <input asp-for="rec_no" class="form-control" />
        <span asp-validation-for="rec_no" class="text-danger" />
    </div>
</div>
    <div class="form-group">
        <label asp-for="company_name_th" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <input asp-for="company_name_th" class="form-control" />
            <span asp-validation-for="company_name_th" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="company_name_eng" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <input asp-for="company_name_eng" class="form-control" />
            <span asp-validation-for="company_name_eng" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="position_name_th" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <input asp-for="position_name_th" class="form-control" />
            <span asp-validation-for="position_name_th" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="position_name_eng" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <input asp-for="position_name_eng" class="form-control" />
            <span asp-validation-for="position_name_eng" class="text-danger" />
        </div>
    </div>
<div class="form-group">
    <label asp-for="work_year" class="col-md-3 control-label"></label>
    <div class="col-md-9">
        <input asp-for="work_year" class="form-control" />
        <span asp-validation-for="work_year" class="text-danger" />
    </div>
</div>
    <div class="form-group">
        <label asp-for="office_address" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <textarea asp-for="office_address" class="form-control" rows="3"></textarea>
            <span asp-validation-for="office_address" class="text-danger" />
        </div>
    </div>
<div class="form-group">
    <div class="col-md-offset-3 col-md-9">
        <button id="mem_worklistSubmit" class="btn btn-success">บันทึก</button>
    </div>
</div>
</form>




@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
